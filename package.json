{
  "name": "@codewars/docs",
  "private": true,
  "scripts": {
    "build": "gridsome build",
    "develop": "gridsome develop",
    "explore": "gridsome explore",
    "get-schema": "get-graphql-schema http://localhost:8080/___graphql >| schema.graphql",
    "lint:text": "textlint './content/**/*.md'",
    "lint:format": "prettier --check .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "fuse.js": "^6.4.0",
    "gridsome": "^0.7.19"
  },
  "devDependencies": {
    "@gridsome/plugin-sitemap": "^0.4.0",
    "@gridsome/remark-prismjs": "^0.3.0",
    "@gridsome/source-filesystem": "^0.6.2",
    "@gridsome/transformer-remark": "^0.6.1",
    "@sindresorhus/slugify": "^1.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier-vue": "^2.1.0",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "marked": "^1.1.0",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.1",
    "prettier": "^2.0.5",
    "prism-themes": "^1.3.0",
    "sanitize-html": "^1.27.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "tailwindcss": "^1.4.6",
    "tailwindcss-dark-mode": "^1.1.4",
    "textlint": "^11.6.3",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-diacritics": "^1.0.0",
    "textlint-rule-en-capitalization": "^2.0.2",
    "textlint-rule-stop-words": "^2.0.5",
    "textlint-rule-terminology": "^2.1.4",
    "textlint-rule-write-good": "^1.6.2",
    "vue-feather-icons": "^5.0.0",
    "yaml": "^1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --cache --fix"
    ],
    "*.vue": [
      "stylelint --cache --fix",
      "eslint --cache --fix"
    ],
    "*.{js,ts}": [
      "eslint --cache --fix"
    ],
    "*.{json,yml,graphql}": [
      "prettier --write"
    ],
    "content/**/*.md": [
      "textlint",
      "prettier --write"
    ]
  }
}
